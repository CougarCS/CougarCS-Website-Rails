<div class="splash-container">
	<img class="pure-img-responsive" width="100%" height="auto" src="http://notadamandsteve.com/wp-content/uploads/2013/12/valley.jpg" alt="Yosemite">
</div>

<div class="content-wrapper">
	<div class="header">
		<h1>Blog</h1>
	</div>

	<div class="content">
		<h2 class="content-subhead"></h2>

		<% for post in @posts %>
			<% @author = Author.find(post.author_id) %>
			<section class="post">
				<header class="post-header">
					<div class="calendar-date">
						<div class="calendar-date-month"><%= Date::ABBR_MONTHNAMES[post.date.month] %></div>
						<div class="calendar-date-day"><%= post.date.mday %></div>
					</div>
					<%= image_tag @author.avatar.url, :class => "post-avatar" %>
					<h2 class="post-title"><%= post.title %></h2>
					<p class="post-meta">By <%= @author.first_name %> <%= @author.last_name %></p>
				</header>
				<div class="post-description">
					<p>
						<%= post.body %>
					</p>
				</div>
			</section>
		<% end %>
	
	</div>

	
</div>
</div>