<div class="header">
	<h1>Forgot your password?</h1>
</div>

<div class="content">
	<h2 class="content-subhead"></h2>
	
	<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :class => 'pure-form pure-form-aligned' }) do |f| %>
	<fieldset>
		<%= devise_error_messages! %>

		<div class="pure-control-group">
			<%= f.label :email %>
			<%= f.email_field :email, :autofocus => true %>
		</div>

		<div class="pure-controls">
			<%= f.submit "Send me reset password instructions", :class => 'pure-button button-uh' %>
			<div>
				<%= render "devise/shared/links" %>
			</div>
		</div>
		
		<% end %>

	</fieldset>
</div>
